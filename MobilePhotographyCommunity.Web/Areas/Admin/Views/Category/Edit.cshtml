@using MobilePhotographyCommunity.Data.ViewModel
@model CategoryVm
@{
    ViewBag.Title = "Chỉnh sửa chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content px-4">
    <h1 class="title-content">Chỉnh sửa chủ đề</h1>

    <form action="/Admin/Category/Edit" method="post">
        <div class="form-group">
            @Html.HiddenFor(m => m.CategoryId)
        </div>
        <div class="form-group">
            <label for="">Tên chủ đề:</label>
            @Html.EditorFor(m => m.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="">Mô tả:</label>
            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <input type="submit" class="btn btn-success" value="Lưu">
    </form>
</div>
@section Scripts{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
