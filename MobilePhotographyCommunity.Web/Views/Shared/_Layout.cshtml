@using MobilePhotographyCommunity.Data.DomainModel
@using MobilePhotographyCommunity.Common
@{ 
    var roles = (List<UserRole>)Session[UserSession.Role];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="~/Assets/client/fonts/fontawesome-pro-5.11.2-web/css/all.min.css">
    <link href="~/Assets/client/css/mikes-modal.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/client/css/style.css">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Assets/client/img/page/icon-camera.jpg" type="image/gif">

</head>
<body>
    <header id="header" class="bg-white">
        <div class="container">
            <div class="row">
                <div class="col-xs-4 logo-box">
                    <div class="logo jumpToHome" style="padding-top: 3px;">
                        <a href="/Home/Index">
                            <img src="~/Assets/client/img/page/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-xs-4 search-box">
                    <form action="" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm" id="txtSearch" name="search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="fal fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- <div class="col-sm-4 jumbToLogin">
                    <a href="login.html" class="btn btn-primary" style="float: right;">Đăng nhập</a>
                </div> -->

                <div class="col-xs-4 my-box">
                    <div class="f-right">
                        <a class="mr-l-30" href="/Account/UserProfile/@Session[UserSession.UserId]">
                            <img class="user-avt" src="~/UploadImage/Avatar/@Session[UserSession.Avatar]"
                                 style="width: 40px; height: 40px;" alt="">
                        </a>
                        <a class="mr-l-30" href="">
                            <i class="fal fa-user-friends fa-lg"></i><span style="color: red;">2</span>
                        </a>

                        <div class="notification">
                            <a class="mr-l-30" href="#" id="notification-dropdown" data-toggle="dropdown">
                                <i class="fal fa-bell fa-lg"></i><span style="color: red;">3</span>
                            </a>

                            <!-- Open Notification -->
                            <ul class="notification-box dropdown-menu dropdown-menu-right"
                                aria-labelledby="notification-dropdown">
                                <h5 class="header-box">Thông báo</h5>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">
                                        <div class="d-flex">
                                            <div class="notifiedby-user">
                                                <img class="user-avt" src="~/Assets/client/img/user/anpon.jpg" alt="">
                                            </div>
                                            <div class="notification-content">
                                                <div><span>An Pon</span> đã bình luận về bài viết của bạn</div>
                                                <div>02/04/2020</div>
                                            </div>
                                            <div class="notifiedby-img">
                                                <img src="~/Assets/client/img/post-img/hoacuc.jpg" alt=""
                                                     style="width: 50px; height: 50px;">
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">
                                        <div class="d-flex">
                                            <div class="notifiedby-user">
                                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt="">
                                            </div>
                                            <div class="notification-content">
                                                <div><span>Sa Tăng</span> đã thích về bài viết của bạn</div>
                                                <div>02/04/2020</div>
                                            </div>
                                            <div class="notifiedby-img">
                                                <img src="~/Assets/client/img/post-img/chuonchuon.jpg" alt=""
                                                     style="width: 50px; height: 50px;">
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">
                                        <div class="d-flex">
                                            <div class="notifiedby-user">
                                                <img class="user-avt" src="~/Assets/client/img/user/trubatgioi.jpg" alt="">
                                            </div>
                                            <div class="notification-content">
                                                <div><span>Trư Bát Giới</span> đã thích về bài viết của bạn</div>
                                                <div>02/04/2020</div>
                                            </div>
                                            <div class="notifiedby-img">
                                                <img src="~/Assets/client/img/post-img/cuabien.jpg" alt=""
                                                     style="width: 50px; height: 50px;">
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <div style="text-align: center;">
                                    <a class="view-more" href="#" style="text-decoration: none;">Xem thêm</a>
                                </div>
                            </ul>
                            <!-- End Notification -->
                        </div>

                        <div class="setting">
                            <a class="mr-l-30" href="#" id="setting-dropdown" data-toggle="dropdown">
                                <i class="fal fa-caret-down"></i>
                            </a>
                            <!-- Open Option -->
                            <ul class="setting-box dropdown-menu dropdown-menu-right"
                                aria-labelledby="setting-dropdown">
                                @if (roles.Count() > 1)
                                {
                                    <li><a href="/Admin/Home/Index"><i class="fal fa-tachometer-alt-slow"></i> Bảng điều khiển</a></li>
                                    <li class="divider"></li>
                                }
                                <li><a href="#"><i class="fal fa-cog"></i> Cài đặt</a></li>
                                <li class="divider"></li>
                                <li><a href="/Account/ResetPassword"><i class="fal fa-lock"></i> Đổi mật khẩu</a></li>
                                <li class="divider"></li>
                                <li><a href="/Account/Logout"><i class="fal fa-sign-out-alt"></i> Đăng xuất</a></li>
                            </ul>
                            <!-- End Option -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <button onclick="scrollToTop()" id="btnScroll" title="Go to top"><i class="fas fa-arrow-up"></i></button>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
