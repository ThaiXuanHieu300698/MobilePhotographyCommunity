                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">Sa Tăng</span><span class="label label-success">143 Thích</span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">Sa Tăng</span><span class="label label-success">142 Thích</span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">Sa Tăng</span><span class="label label-success">141 Thích</span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">Sa Tăng</span><span class="label label-success">140 Thích</span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/satang.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">Sa Tăng</span><span class="label label-success">139 Thích</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("~/Views/Shared/_MikesModal.cshtml")

@section Scripts {
    <link rel="stylesheet" href="~/Assets/client/css/challenge.css">
    <script src="~/Assets/client/js/main.js"></script>
    <script src="~/Assets/client/js/mikes-modal.min.js"></script>
    <script src="~/Scripts/controller/common.js"></script>
    <script>
        function deleteImgPreview() {
            $("#img-preview").attr("src", "");
            $(".region-img-preview").css("display", "none");
        }
    </script>
}

