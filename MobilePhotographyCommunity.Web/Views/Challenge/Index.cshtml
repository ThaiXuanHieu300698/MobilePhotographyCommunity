@using MobilePhotographyCommunity.Common
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="description-challenge container">
    <div class="row">
        <div class="col-xs-4">
            <div class="frame-created-by bg-white">
                <img class="created-by-challenge" src="~/Assets/client/img/user/hieuxt.png" alt="">
            </div>
        </div>
        <div class="col-xs-8">
            <div class="date">
                <i class="fal fa-calendar-alt"></i><span style="margin-right:30px;"> 20/07/2020 - 02/08/2020</span>
                <i class="fal fa-users"></i><span style="margin-right:30px;"> 125 thành viên</span>
                <button class="btn btn-join-now">Tham gia ngay</button>
            </div>
            <div class="challenge-name">
                <h1>THỬ THÁCH #10: 14 ngày cùng Hiếu XT</h1>
            </div>
            <div class="description-detail">
                <span>Mô tả: </span><span>Mỗi ngày, tất cả thành viên tham gia thử thách sẽ đăng một hình ảnh về chủ đề con người Việt Nam tại trang này.</span>
            </div>
        </div>
        <span class="close-description" onclick="closeDescription()">&times;</span>
    </div>
</section>
<section>
    <div class="container">
        <div class="col-sm-3 col-left">
            @Html.Action("ChallengePartial", "Challenge")

            @Html.Action("CategoryPartial", "Category")
        </div>
        <div class="col-sm-6 col-center">
            <div class="add-post-box bg-white">

                <div class="title-box">Tạo bài viết</div>
                <div class="mr-t-20">
                    <a class="col-xs-2 mr-l-30" href="/Account/UserProfile/@Session[UserSession.UserId]"><img class="user-avt" src="~/UploadImage/Avatar/@Session["Avatar"]" alt=""></a>
                    <input type="hidden" id="postId" value="0" />
                    <div class="col-xs-10"><textarea class="post-caption-input form-control" id="post-caption-input" style="resize:none" placeholder="Bạn đang nghĩ gì?"></textarea></div>
                </div>
                <div class="upload-image">
                    <label for="icon-input">
                        <i class="fas fa-image fa-lg" style="color: #5cb85c;"></i>
                        Ảnh/Video
                    </label>
                    <input id="icon-input" type="file" name="file"
                           accept=".jpg, .png, *.jpeg" onchange="addImage(this)" />
                    <label for="">
                        <i class="fas fa-laugh fa-lg" style="color: #EC971F;"></i>
                        Cảm xúc/Hoạt động
                    </label>
                    <label for="">
                        <i class="fas fa-video fa-lg" style="color: #C9302C;"></i>
                        Video trực tiếp
                    </label>
                </div>
                <div class="region-img-preview" style="display: none;">
                    <img id="img-preview" src="" alt="" width="100%">
                    <div class="middle">
                        <a href="javascript:deleteImgPreview();" style="color: black;">
                            <i class="fal fa-trash-alt fa-lg"></i>
                        </a>
                    </div>
                </div>
                <button class="btn btn-primary btn-up"><i class="fal fa-check"></i> Đăng</button>
                <div class="err-msg" style="color:red; text-align:center"></div>
            </div>
            <div class="post-box">
                <div class="post bg-white">
                    <div class="auth">
                        <a href="">
                            <img class="user-avt" src="~/Assets/client/img/user/hieuxt.png" alt="">
                            <h3 class="auth-name" style="display: inline;">Thái Xuân Hiếu</h3>
                        </a>
                        <div class="created-date">10/03/2020</div>

                        <div class="dropdown post-option" style="float: right;">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                <i class="fal fa-ellipsis-h fa-2x"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#">Chỉnh sửa bài viết</a></li>
                                <li><a href="#">Tắt thông báo bài viết</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Ẩn bài viết</a></li>
                                <li><a href="#">Xóa khỏi dòng thời gian</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="content">
                        <div class="post-caption">Tôi yêu Việt Nam</div>
                        <div class="post-img">
                            <img class="photo" src="~/Assets/client/img/post-img/giotnuoc-vietnam.jpg" alt=""
                                 width="100%">
                        </div>
                    </div>
                    <div class="count-liked-commented">

                    </div>
                    <div class="post-action" style="clear:both">
                        <div class="row" style="text-align: center;">
                            <div class="col-xs-4">
                                <a class="btn btn-like">
                                    <i class="fal fa-thumbs-up"></i> Thích
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a class="btn btn-comment">
                                    <i class="fal fa-comment-alt"></i> Bình
                                    luận
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a class="btn btn-share">
                                    <i class="fal fa-share-square"></i> Chia
                                    sẻ
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="comment-box">
                        <div class="my-comment d-flex">
                            <div class="f-grow-1" style="flex-grow: 1; padding-left: 5px">
                                <a href="">
                                    <img class="user-avt" src="~/Assets/client/img/user/hieuxt.png" alt="">
                                </a>
                            </div>
                            <div class="f-grow-15" style="flex-grow: 15;">

                                <div class="form-group rg-comment" style="position: relative">
                                    <input type="text" name="" id="" placeholder="Viết bình luận..."
                                           class="comment-content-inp form-control">
                                    <a class="btn btn-primary btn-send-comment" style="position: absolute; top: 0; right: 0;">Đăng</a>
                                </div>
                            </div>
                        </div>
                        <div class="all-comment">
                            <div class="other-comment">
                                <div class="detail-comment">
                                    <div class="commentedby">
                                        <a href="">
                                            <img class="user-avt" src="~/UploadImage/Avatar/tonngokhong.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="comment-content">
                                        <a href="">
                                            <h4 class="name">Tôn Ngộ Không</h4>
                                        </a>
                                        <span>
                                            So Đẹp
                                        </span>
                                    </div>
                                </div>
                                <div class="action-comment">
                                    <span>Thích</span>
                                    <span>&nbsp;·&nbsp;Trả lời</span>
                                    <span>&nbsp;·&nbsp;15/12/2020</span>
                                </div>
                                <div class="comment-option">
                                    <div class="dropdown post-option" style="float: right;">
                                        <a class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="fal fa-ellipsis-v fa-2x"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li><a href="#"><i class="fal fa-edit"></i> Chỉnh sửa</a></li>
                                            <li><a href="#"><i class="fal fa-trash-alt"></i> Xóa</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <a href="#">Xem thêm bình luận</a>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-sm-3 col-right">

            <div class="rankings-box bg-white">
                <h4 class="title-box">Xếp hạng</h4>
                <div class="overflow-auto">
                    <ul>
                        <li>
                            <a href="">
                                <img class="user-avt" src="~/Assets/client/img/user/anpon.jpg" alt=""
                                     style=" width:40px; height:40px"><span class="member">An pon</span><span class="label label-success">150 Thích</span>
                            </a>
